# ====================================
# Token Configuration
# ====================================
# Replace with your token's mint address
VITE_TOKEN_MINT_ADDRESS=YOUR_TOKEN_MINT_ADDRESS

# Token metadata (these can be overridden in your .env file)
VITE_TOKEN_SYMBOL=TOKEN
VITE_TOKEN_NAME=Your Token
VITE_TOKEN_DECIMALS=9
VITE_TOKEN_LOGO_URL=/img/token-logo.png

# ====================================
# API Configuration
# ====================================
# DexScreener API for token price and market data
VITE_DEXSCREENER_API=https://api.dexscreener.com/tokens/v1/solana

# Solana Tracker API for historical price data
# Get your API key from https://www.solanatracker.io/account/data-api
VITE_SOLANA_TRACKER_API_URL=https://api.solanatracker.io
VITE_SOLANA_TRACKER_API_KEY=your_api_key_here

# ====================================
# Environment Configuration
# ====================================
# Development environment settings (only loaded in development mode)
VITE_DEBUG=true
VITE_LOG_LEVEL=debug

# Production environment settings (only loaded in production mode)
# Create a .env.production file with these values for production
# VITE_DEBUG=false
# VITE_LOG_LEVEL=warn

# ====================================
# RPC Configuration
# ====================================
# Replace with your preferred RPC endpoint
VITE_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# For development, you might want to use a devnet or testnet RPC
# VITE_SOLANA_RPC_URL=https://api.devnet.solana.com
# VITE_SOLANA_RPC_URL=https://api.testnet.solana.com
